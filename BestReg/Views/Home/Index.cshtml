@{
    ViewData["Title"] = "Home Page";
}

<!-- Custom Styles -->
<style>
    .video-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1;
    }

    #bgVideo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .welcome-container {
        position: relative;
        top: 50%;
        transform: translateY(-50%);
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        padding: 20px;
    }

    .welcome-title {
        font-size: 3rem;
        margin-bottom: 20px;
    }

    .btn-get-started {
        display: inline-block;
        padding: 12px 24px;
        font-size: 1.25rem;
        color: white;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-get-started:hover {
            background-color: #0056b3;
        }
</style>
<br />
<br />
<br />
<br />
<br />
<div class="video-background">
    <video autoplay muted loop id="bgVideo">
        <source src="/videos/Chickenvideo.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>

<div class="welcome-container text-center">
    <h1 class="display-4 welcome-title">Welcome to Our Farm!</h1>
    <p>
        We're excited to have you here at our chicken farm. Our farm is home to a variety of chicken breeds, each known for their unique characteristics and contributions to our farm's ecosystem. Whether you're interested in learning about egg production, chicken care, or the different breeds we raise, you've come to the right place!
    </p>
    <a href="http://localhost:5270/Identity/Account/Login" class="btn-get-started">Get Started</a>
</div>
