@model BestReg.Data.VetAppointment

<h2>Decline Appointment</h2>

<form asp-action="Decline">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="AppointmentType" class="control-label">Appointment Type</label>
        <input asp-for="AppointmentType" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label">Start Time</label>
        <input asp-for="StartTime" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="EndTime" class="control-label">End Time</label>
        <input asp-for="EndTime" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="DeclineReason" class="control-label">Reason for Declining</label>
        <textarea asp-for="DeclineReason" class="form-control"></textarea>
        <span asp-validation-for="DeclineReason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">Decline Appointment</button>
</form>
