@model IEnumerable<BestReg.Data.VetAppointment>

<h2>Appointments</h2>

<!-- Button to navigate to the Create Appointment page -->
<div class="col-auto align-self-end mb-3">
    <a asp-action="Create" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;">
        <i class="fas fa-plus"></i> Create Appointment
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Type</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.StartTime.ToString("MM/dd/yyyy HH:mm")</td>
                <td>@appointment.EndTime.ToString("HH:mm")</td>
                <td>@appointment.AppointmentType</td>
                <td>
                    @if (appointment.IsDeclined)
                    {
                        <span class="text-danger">Declined</span>
                    }
                    else if (appointment.Canceled)
                    {
                        <span class="text-warning">Cancelled</span>
                    }
                    else
                    {
                        <span class="text-success">Active</span>
                    }
                </td>
                <td>
                    @if (!appointment.Canceled && !appointment.IsDeclined)
                    {
                        <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-info">Details</a>
                        <a asp-action="Cancel" asp-route-id="@appointment.Id" class="btn btn-warning">Cancel</a>
                        <a asp-action="Decline" asp-route-id="@appointment.Id" class="btn btn-danger">Decline</a>
                    }
                    else if (appointment.IsDeclined)
                    {
                        <span>Reason: @appointment.DeclineReason</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
