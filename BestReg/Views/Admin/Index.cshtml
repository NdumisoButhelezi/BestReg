@model IEnumerable<BestReg.Models.AdminUserViewModel>

<h2>User Management</h2>

<a class="btn btn-primary" asp-page="/Account/Register" asp-area="Identity">Create New User</a>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Roles</th>  <!-- Add this column for roles -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@string.Join(", ", user.Roles)</td>  <!-- Display roles as a comma-separated list -->
                <td>
                    <!-- Actions like Edit or Delete -->
                </td>
            </tr>
        }
    </tbody>
</table>
