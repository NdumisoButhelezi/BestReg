@model List<BestReg.Data.MedicalRecord>

<h2>Medical Records</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Diagnosis</th>
            <th>Treatment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.RecordDate.ToShortDateString()</td>
                <td>@record.Diagnosis</td>
                <td>@record.Treatment</td>
            </tr>
        }
    </tbody>
</table>
