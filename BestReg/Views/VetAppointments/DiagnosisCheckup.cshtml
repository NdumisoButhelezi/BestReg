@model BestReg.Data.DiagnosisRecord

<h2>Diagnosis Checkup</h2>

<form asp-action="DiagnosisCheckup">
    <input type="hidden" asp-for="AnimalId" />
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IllnessStatus"></label>
        <input asp-for="IllnessStatus" class="form-control" />
        <span asp-validation-for="IllnessStatus" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TreatmentStatus"></label>
        <input asp-for="TreatmentStatus" class="form-control" />
        <span asp-validation-for="TreatmentStatus" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save and Schedule Vaccination</button>
</form>
