@{
    ViewData["Title"] = "QR Code";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.QrCodeBase64 != null)
{
    <div>
        <p>Your QR code is below:</p>
        <img src="data:image/png;base64,@ViewBag.QrCodeBase64" alt="QR Code" />
    </div>
}
else
{
    <p>QR code generation failed. Please try again.</p>
}
